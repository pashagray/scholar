$("#notification_<%= @id %>").fadeOut('fast');
<% if current_user.notifications.unopened_only.count > 0 %>
  $(".notifications-count").html(<%= current_user.notifications.unopened_only.count %>)
<% else %>
  $(".notifications-count").remove();
  $(".notification-bar i").removeClass('fa-bell');
  $(".notification-bar i").addClass('fa-bell-o');
<% end %>
